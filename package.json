{
	"name": "kodimcz-docker",
	"private": true,
	"version": "0.0.0",
	"description": "Kodim.cz Docker image for development.",
	"main": "index.js",
	"scripts": {
		"get-version": "npm pkg get version | xargs echo",
		"postversion": "npm run build",
		"build": "docker build -t \"onset/kodimcz:$(npm run get-version | tail -1)\" .",
		"release": "docker push \"onset/kodimcz:$(npm run get-version | tail -1)\""
	},
	"keywords": [
		"docker",
		"kodim.cz"
	],
	"author": "Filip Chalupa <chalupa.filip@gmail.com>",
	"license": "ISC"
}
